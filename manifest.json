{
    "manifest_version": 2,
    "name": "News Widget",
    "version": "1.0",
    "icons": {"128": "earth_128.png"},
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": ["popup.js"]
        }
    ],
    "background": {
        "js": "popup.js"
    },
    "browser_action": {
        "default_icon": "earth_90.png",
        "default_popup": "popup.html"
    },
    "permissions": ["activeTab"]

}
